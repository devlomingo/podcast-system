{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": [
      "node"
    ],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "baseUrl": ".",
    "paths": {
      "@core/*":    ["libs/core/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
